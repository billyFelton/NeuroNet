# ============================================================
# NeuroNet Full Stack Environment Configuration
# Copy to .env and fill in values before running docker compose
# ============================================================

# ── General ─────────────────────────────────────────────────
NEURO_ENVIRONMENT=development
NEUROKIT_VERSION=v0.2.0

# ── RabbitMQ ────────────────────────────────────────────────
RABBITMQ_USERNAME=neuro
RABBITMQ_PASSWORD=changeme-rabbitmq
RABBITMQ_VHOST=/neuro

# ── Postgres ────────────────────────────────────────────────
POSTGRES_PASSWORD=changeme-postgres-root
VAULT_IAM_DB_PASSWORD=changeme-vault-iam-db

# ── Vault-IAM ──────────────────────────────────────────────
VAULT_IAM_JWT_SECRET=changeme-generate-random-64-chars
VAULT_IAM_MASTER_SERVICE_TOKEN=changeme-bootstrap-token

# ── HashiCorp Vault AppRoles ────────────────────────────────
# Generate these after initializing HCVault (see README)
VAULT_IAM_ROLE_ID=
VAULT_IAM_SECRET_ID=
RESOLVER_ROLE_ID=
RESOLVER_SECRET_ID=
ENTRAID_CONNECTOR_ROLE_ID=
ENTRAID_CONNECTOR_SECRET_ID=
SLACK_CONNECTOR_ROLE_ID=
SLACK_CONNECTOR_SECRET_ID=
CLAUDE_WORKER_ROLE_ID=
CLAUDE_WORKER_SECRET_ID=

# ── EntraID Sync (Vault-IAM background sync) ───────────────
ENTRAID_SYNC_ENABLED=false
ENTRAID_TENANT_ID=
ENTRAID_CLIENT_ID=
ENTRAID_CLIENT_SECRET=
ENTRAID_SYNC_INTERVAL=300
